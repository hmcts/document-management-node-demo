{
    "compilerOptions": {
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "es2016.array.include",
            "es2017.object",
            "dom"
        ],
        "target": "es6",
        "module": "commonjs",
        "baseUrl": "src/main",
        "paths": {
            "router/*": [
                "router/*"
            ],
            "routes/*": [
                "routes/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ]
    }
}
